<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView android:id="@+id/team_background" android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
               android:src="@drawable/bg_team"/>
    <ImageView android:id="@+id/team_logo" android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/team_background"
            app:layout_constraintStart_toStartOf="@id/team_background"
            app:layout_constraintEnd_toEndOf="@id/team_background"
            app:layout_constraintBottom_toBottomOf="@id/team_background"/>
    <TextView android:id="@+id/team_name" android:layout_width="match_parent" android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/team_background"
            app:layout_constraintStart_toStartOf="@id/team_background"
            app:layout_constraintEnd_toEndOf="@id/team_background"/>
</android.support.constraint.ConstraintLayout>