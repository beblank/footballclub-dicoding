<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="@dimen/small_margin">
    <TextView
            android:id="@+id/txt_away_goals"
            android:layout_width="@dimen/item_detail_text_width" android:layout_height="wrap_content"
            android:textSize="@dimen/text_h3_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/goals"
            android:textSize="@dimen/text_h3_size"
            android:textColor="@color/h2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/txt_home_goals"
            android:layout_width="150dp" android:layout_height="wrap_content"
            android:textSize="@dimen/text_h3_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>